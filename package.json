{
  "name": "mlpack-bot",
  "version": "1.0.0",
  "description": "Helpful and friendly mlpack Probot",
  "author": "Ryan Curtin <ryan@ratml.org> (http://www.mlpack.org)",
  "license": "ISC",
  "repository": "https://github.com/mlpack/mlpack-bot.git",
  "homepage": "https://github.com/mlpack/mlpack-bot",
  "bugs": "https://github.com/mlpack/mlpack-bot/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "probot run ./index.js",
    "lint": "standard --fix",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "joi": "^14.3.1",
    "probot": "^7.5.3",
    "probot-scheduler": "^1.2.0"
  },
  "devDependencies": {
    "jest": "^22.4.3",
    "nock": "^10.0.0",
    "nodemon": "^1.19.4",
    "smee-client": "^1.1.0",
    "standard": "^10.0.3"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
